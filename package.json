{
  "name": "authNode_api",
  "version": "1.0.0",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "dev": "nodemon ./src/app.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand --forceExit",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test - --findRelatedTests -silent",
    "test:ci": "yarn test -- --coverage --silent "
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "yarn test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:ci"
    }
  },
  "repository": "https://github.com/marcosdid/ApiAuth_node.git",
  "author": "marcosdid <limafilhoguerreiro@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "standard": "^14.3.4",
    "sucrase": "^3.15.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.4",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.6.0",
    "validator": "^13.1.1"
  }
}
