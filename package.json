{
  "name": "authNode_api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/app.js",
    "test": "jest --silent --colors --noStackTrace --passWithNoTests",
    "test:unit": " yarn test -- --watch -o",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent --noStackTrace",
    "test:ci": "jest --coverage --noStackTrace --silent"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "yarn test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:ci"
    }
  },
  "repository": "https://github.com/marcosdid/ApiAuth_node.git",
  "author": "marcosdid <limafilhoguerreiro@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "standard": "^14.3.4",
    "sucrase": "^3.15.0"
  }
}
